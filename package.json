{
  "name": "helper-related",
  "description": "Template helper for generating a list of links to the homepages of related GitHub/npm projects.",
  "version": "1.0.0",
  "homepage": "https://github.com/helpers/helper-related",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "helpers/helper-related",
  "bugs": {
    "url": "https://github.com/helpers/helper-related/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "arr-union": "^3.1.0",
    "engine": "^0.1.12",
    "markdown-utils": "^0.7.3",
    "reflinks": "^1.0.0"
  },
  "devDependencies": {
    "engine-base": "^0.1.3",
    "engine-handlebars": "^0.8.2",
    "gulp-format-md": "^1.0.0",
    "mocha": "^5.2.0",
    "templates": "^1.2.9"
  },
  "keywords": [
    "async",
    "compile",
    "github",
    "helper",
    "helpers",
    "homepage",
    "links",
    "list",
    "npm",
    "related",
    "render",
    "repo",
    "repos",
    "resolve",
    "template",
    "templates"
  ],
  "verb": {
    "run": true,
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "assemble",
        "handlebars-helpers",
        "helper-reflinks",
        "micromatch",
        "remarkable",
        "template-helpers",
        "verb"
      ]
    },
    "reflinks": [
      "assemble",
      "verb",
      "verb-readme-generator"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
